{
    "server": {
        "app": {
            "appName": "pingoo flight tracking"
        },
        "debug": {
            "$filter": "env",
            "$base": {
                "request": ["error"]
            },
            "$default": {
                "log": ["info", "error", "connection", "client"]
            },
            "production": {
                "log": ["error"]
            }
        }
    },
    "connections": {
        "$filter": "env",
        "production": [
            { "port": 80 }
        ],
        "$default": [
            { "port": 1337 }
        ]
    },
    "registrations": [
        { "plugin": "./plugins/test_plugin" }
    ]
}
